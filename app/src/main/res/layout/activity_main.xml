<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/zielonyDoTla"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/rozmiarCzcionki"
        android:layout_margin="16dp"
        android:textAlignment="center"
        android:text="@string/Pytanie" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/zolty"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/marginesPrzycisku"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white1"
            android:onClick="zlaOdpowiedz"
            android:layout_margin="@dimen/marginesPrzycisku"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/marginesPrzycisku"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/Turkusowy"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/marginesPrzycisku"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/magenta"
            android:onClick="dobraOdpowiedz"
            android:layout_margin="@dimen/marginesPrzycisku"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/red"
            android:onClick="zlaOdpowiedz"
            android:layout_margin="@dimen/marginesPrzycisku"/>
    </LinearLayout>

</LinearLayout>